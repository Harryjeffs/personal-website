<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="navigatingTo" class="bg-white">
    <ActionBar title="John Doe" flat="true" class="bg-white">
        <NavigationButton visibility="collapsed" />
    </ActionBar>
    
    <ScrollView>
        <StackLayout class="p-4 space-y-6">
            <!-- Profile Section -->
            <Image src="~/images/profile.jpg" class="h-32 w-32 rounded-full self-center scale-in" />
            <Label text="iOS Developer" class="text-xl text-center text-red-500 fade-in" />
            
            <!-- Bio Section -->
            <Label text="Creating beautiful native iOS experiences with Swift and SwiftUI" textWrap="true" 
                   class="text-center text-gray-600 slide-in" />
            
            <!-- Skills Section -->
            <GridLayout rows="auto" columns="* * *" class="mt-6">
                <StackLayout col="0" class="text-center p-2 scale-in">
                    <Label text="Swift" class="font-bold text-red-500" />
                    <Label text="5 years" class="text-gray-600" />
                </StackLayout>
                <StackLayout col="1" class="text-center p-2 scale-in">
                    <Label text="SwiftUI" class="font-bold text-red-500" />
                    <Label text="3 years" class="text-gray-600" />
                </StackLayout>
                <StackLayout col="2" class="text-center p-2 scale-in">
                    <Label text="UIKit" class="font-bold text-red-500" />
                    <Label text="4 years" class="text-gray-600" />
                </StackLayout>
            </GridLayout>

            <!-- Projects Section -->
            <Label text="Featured Projects" class="text-xl font-bold mt-6 slide-in" />
            <GridLayout rows="auto, auto" columns="*" class="space-y-4">
                <StackLayout tap="{{ onProjectTap }}" class="bg-gray-50 p-4 rounded-lg scale-in">
                    <Label text="FitTracker Pro" class="font-bold text-red-500" />
                    <Label text="Fitness tracking app with HealthKit integration" textWrap="true" class="text-gray-600" />
                </StackLayout>
                
                <StackLayout tap="{{ onProjectTap }}" class="bg-gray-50 p-4 rounded-lg scale-in">
                    <Label text="CryptoWatch" class="font-bold text-red-500" />
                    <Label text="Real-time cryptocurrency monitoring app" textWrap="true" class="text-gray-600" />
                </StackLayout>
            </GridLayout>

            <!-- Contact Button -->
            <Button text="Get in Touch" tap="{{ onContactTap }}" 
                    class="bg-red-500 text-white font-bold py-4 rounded-lg mt-6 scale-in" />
        </StackLayout>
    </ScrollView>
</Page>